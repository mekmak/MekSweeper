<Window x:Class="MekSweeper.UI.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DataContext="local:MainWindowViewModel"
        mc:Ignorable="d" Background="Black"
        Title="MekSweeper" Width="Auto" Height="Auto" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <DataTemplate x:Key="DataTemplateLevel2">
            <Button Content="{Binding Display}" FontWeight="Bold" Click="OnClick" MouseUp="UIElement_OnMouseUp" Height="30" Width="30" Margin="0">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FlagState}" Value="0">
                                <Setter Property="Background" Value="LightGray"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding FlagState}" Value="2">
                                <Setter Property="Background" Value="LightGray"/>
                            </DataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsMine}" Value="False"/>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="0"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Background" Value="Gray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="1"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Blue"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="2"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Green"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="3"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Red"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="4"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Purple"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="5"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Brown"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="6"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Teal"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="7"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Black"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding NeighboringMineCount}" Value="8"/>
                                    <Condition Binding="{Binding FlagState}" Value="1"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="Orange"></Setter>
                                <Setter Property="Background" Value="LightGray"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </DataTemplate>
        <DataTemplate x:Key="DataTemplateLevel1">
            <ItemsControl ItemsSource="{Binding }" ItemTemplate="{DynamicResource DataTemplateLevel2}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="25,5,25,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="2,0" Orientation="Horizontal">
                <ComboBox Height="20" ItemsSource="{Binding DifficultyTiers}" SelectedItem="{Binding SelectedDifficulty}"/>
                <Label Content="Columns:" Background="Black" Foreground="LawnGreen"/>
                <TextBox VerticalAlignment="Center" Text="{Binding NumberOfColumns}" Background="Black" Foreground="LawnGreen"/>
                <Label Content="Rows:" Background="Black" Foreground="LawnGreen"/>
                <TextBox VerticalAlignment="Center" Text="{Binding NumberOfRows}" Background="Black" Foreground="LawnGreen"/>
                <Label Content="Mines:" Background="Black" Foreground="LawnGreen"/>
                <TextBox VerticalAlignment="Center" Text="{Binding NumberOfMines}" Background="Black" Foreground="LawnGreen"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2,0">
                <Label HorizontalAlignment="Right" Content="{Binding MessageContent}" Foreground="LawnGreen"/>
                <Button HorizontalAlignment="Right" Background="Black" Foreground="LawnGreen" Padding="5,0" Content="New Game" Command="{Binding NewGameCommand}"/>
            </StackPanel>
        </Grid>
        
        <ItemsControl Margin="2" Grid.Row="1" ItemsSource="{Binding Cells}" ItemTemplate="{DynamicResource DataTemplateLevel1}"/>
    </Grid>
</Window>
